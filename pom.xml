						<version>${maven-surefire-plugin.version}</version>
						<configuration>
							<excludes>
								<exclude>TraceabilityLogServiceTest</exclude>
							</excludes>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
