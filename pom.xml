								<image>${docker.base-image}</image>
								<platforms>
									<platform>
										<architecture>amd64</architecture>
										<os>linux</os>
									</platform>
								</platforms>
							</from>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
